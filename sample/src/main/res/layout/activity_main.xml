<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <com.iroyo.expandingslider.ExpandingSlider
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:slider_maxValue="100"
        app:slider_minValue="50"
        app:slider_title="HOLA"
        app:slider_titleSize="16sp"
        app:slider_titleColor="#5e5e5e"
        app:slider_showIndicator="true"
        app:slider_colorBase="#c4c4c4"
        app:slider_colorMain="#6085ff"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
